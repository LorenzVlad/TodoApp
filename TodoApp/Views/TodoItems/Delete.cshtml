        <div class="col-md-6">
            <h4>TodoItem</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    <strong>@Html.DisplayNameFor(model => model.Title)</strong>
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-3">
                    <strong>@Html.DisplayNameFor(model => model.Description)</strong>
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Description)
